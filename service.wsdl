<?xml version="1.0" encoding="UTF-8"?>
<definitions name="SCMSService"
             targetNamespace="tns"
             xmlns:tns="tns"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">

    <wsdl:types>
        <xsd:schema targetNamespace="tns">

            <xsd:complexType name="Delivery">
                <xsd:sequence>
                    <xsd:element name="ID" type="xsd:string"/>
                    <xsd:element name="ProjectCode" type="xsd:string"/>
                    <xsd:element name="PQ" type="xsd:string"/>
                    <xsd:element name="PO_SO" type="xsd:string"/>
                    <xsd:element name="ASN_DN" type="xsd:string"/>
                    <xsd:element name="Country" type="xsd:string"/>
                    <xsd:element name="ManagedBy" type="xsd:string"/>
                    <xsd:element name="FulfillVia" type="xsd:string"/>
                    <xsd:element name="Vendor" type="xsd:string"/>
                    <xsd:element name="INCO_Term" type="xsd:string"/>
                    <xsd:element name="ShipmentMode" type="xsd:string"/>
                    <xsd:element name="LineItemValue" type="xsd:string"/>
                    <xsd:element name="WeightKg" type="xsd:string"/>
                    <xsd:element name="FreightCostUSD" type="xsd:string"/>
                </xsd:sequence>
            </xsd:complexType>

            <xsd:complexType name="Statistics">
                <xsd:sequence>
                    <xsd:element name="total_deliveries" type="xsd:int"/>
                    <xsd:element name="total_line_item_value" type="xsd:double"/>
                    <xsd:element name="total_weight_kg" type="xsd:double"/>
                    <xsd:element name="total_freight_usd" type="xsd:double"/>
                </xsd:sequence>
            </xsd:complexType>

        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="getDeliveryByIDRequest">
        <wsdl:part name="id" type="xsd:int"/>
    </wsdl:message>
    <wsdl:message name="getDeliveryByIDResponse">
        <wsdl:part name="Delivery" type="tns:Delivery"/>
    </wsdl:message>

    <wsdl:message name="getStatisticsRequest"/>
    <wsdl:message name="getStatisticsResponse">
        <wsdl:part name="Statistics" type="tns:Statistics"/>
    </wsdl:message>

    <wsdl:portType name="SCMSServicePortType">
        <wsdl:operation name="getDeliveryByID">
            <wsdl:input message="tns:getDeliveryByIDRequest"/>
            <wsdl:output message="tns:getDeliveryByIDResponse"/>
        </wsdl:operation>

        <wsdl:operation name="getStatistics">
            <wsdl:input message="tns:getStatisticsRequest"/>
            <wsdl:output message="tns:getStatisticsResponse"/>
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="SCMSServiceBinding" type="tns:SCMSServicePortType">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>

        <wsdl:operation name="getDeliveryByID">
            <soap:operation soapAction="getDeliveryByID"/>
            <wsdl:input><soap:body use="literal"/></wsdl:input>
            <wsdl:output><soap:body use="literal"/></wsdl:output>
        </wsdl:operation>

        <wsdl:operation name="getStatistics">
            <soap:operation soapAction="getStatistics"/>
            <wsdl:input><soap:body use="literal"/></wsdl:input>
            <wsdl:output><soap:body use="literal"/></wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="SCMSService">
        <wsdl:port name="SCMSServicePort" binding="tns:SCMSServiceBinding">
            <soap:address location="https://n3-hagstrom.onrender.com"/>
        </wsdl:port>
    </wsdl:service>

</definitions>
